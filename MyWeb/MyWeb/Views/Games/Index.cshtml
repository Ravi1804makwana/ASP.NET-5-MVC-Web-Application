@model MyWeb.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Games</h2>

@if (Model.Games.Count == 0)
{
    <p>There is no registerd games yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Game Id</th>
            <th>Game Name</th>
        </tr>
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Id</td>
                <td><a href="Games/@game.Id">@game.Name</a></td>
            </tr>
        }
    </table>
}

